# Example backend .env for deployment
# Copy to backend/.env or root .env and fill values

# Stripe
STRIPE_SECRET_KEY=sk_live_YOUR_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_KEY_HERE

# Price IDs
PRICE_PREMIUM_MONTHLY_ID=price_YOUR_ID_HERE
PRICE_PREMIUM_YEARLY_ID=price_YOUR_ID_HERE
PRICE_PRO_MONTHLY_ID=price_YOUR_ID_HERE
PRICE_PRO_YEARLY_ID=price_YOUR_ID_HERE

# JWT
JWT_SECRET=YOUR_JWT_SECRET_HERE

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.vercel.app

# SMTP (optional) - Brevo SMTP example
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-smtp-user@smtp-brevo.com
SMTP_PASS=your-smtp-password
SMTP_FROM=your@from.address

# Brevo API Key (preferred)
BREVO_API_KEY=your_brevo_api_key_here

# Node env
NODE_ENV=production
